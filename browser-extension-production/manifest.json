{
  "manifest_version": 3,
  "name": "Sogni Style Explorer",
  "version": "1.1.0",
  "description": "Easily convert grids of profile photos on websites into AI generated alternate portrait theme versions quickly and efficiently.",
  "author": "Sogni",
  "homepage_url": "https://photobooth.sogni.ai",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://photobooth-api.sogni.ai/*",
    "https://photobooth.sogni.ai/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sogni Style Explorer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["progress-overlay.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
